<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Home | Blogify</title>

  <style>
    .blog-body {
      display: -webkit-box;
      -webkit-line-clamp: 6;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="container mt-5">

    <div class="p-5 mb-4 bg-body-tertiary rounded-3 border text-center">
      <h1 class="display-5 fw-bold">Welcome to Blogify</h1>
      <p class="fs-5 text-muted">
        Your personal space to write and manage your blogs
      </p>
      <a href="/add/blog" class="btn btn-primary btn-lg">Write a Blog</a>
    </div>

    <div class="row g-4">
      <% if (blogs && blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
          <div class="col-md-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>

                <p class="card-text blog-body">
                  <%= blog.body %>
                </p>
              </div>

              <div class="card-footer">
                <small class="text-muted">
                  By <%= blog.createdBy.fullName %>
                </small>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="text-center text-muted mt-5">
          <h4>No blogs yet</h4>
          <p>Create your first blog to see it here.</p>
        </div>
      <% } %>
    </div>

  </div>

  <%- include('./partials/script') %>
</body>
</html>
