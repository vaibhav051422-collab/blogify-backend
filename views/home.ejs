<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>  
    <title>Home | Blogify</title>
    </head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-5">
        <div class="p-5 mb-4 bg-body-tertiary rounded-3 border">
            <div class="container-fluid py-5 text-center">
                <h1 class="display-5 fw-bold">Welcome to Blogify</h1>
                <p class="col-md-8 mx-auto fs-4 text-muted">
                    Explore the latest stories, technical tutorials, and creative insights from our community.
                </p>
                <a href="/add/blog" class="btn btn-primary btn-lg">Write a Story</a>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
            
            <% if (locals.blogs && blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="<%= blog.coverImageURL || 'https://images.unsplash.com/photo-1499750310107-5fef28a66643?q=80&w=500' %>" 
                                 class="card-img-top" 
                                 style="height: 200px; object-fit: cover;" 
                                 alt="<%= blog.title %>">
                            
                            <div class="card-body">
                                <h5 class="card-title fw-bold text-truncate"><%= blog.title %></h5>
                                <p class="card-text text-muted">
                                    <%= blog.body.substring(0, 100) %>...
                                </p>
                            </div>

                            <div class="card-footer bg-white border-0 d-flex justify-between align-items-center pb-3">
                                <a href="/blog/add<%= blog._id %>" class="btn btn-sm btn-outline-primary">View Post</a>
                                <small class="text-body-secondary">By <%= blog.createdBy.fullName %></small>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center my-5">
                    <h3 class="text-muted">No blogs found.</h3>
                    <p>Start your journey by adding your first post!</p>
                </div>
            <% } %>

        </div>
    </div>

    <%- include('./partials/script') %>
</body>
</html>